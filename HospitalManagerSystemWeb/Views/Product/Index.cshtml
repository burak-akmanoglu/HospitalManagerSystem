@*
    Product/Index
*@
@model IEnumerable<EntityLayer.Concrete.Product>

<table class="table table-striped" style="width:400px">

    <theead>
        <tr>
            <th>
               Ürün Adı
            </th>
               <th>
             Bulunduğu Depo
            </th>
             
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>

        </tr>
    </theead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.Storehouse.StorehouseName
                </td>
                   

                <td>@Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @class = "btn btn-warning" })</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.ProductId }, new { @class = "btn btn-success" })</td>
            </tr>
        }
    </tbody>
</table>@Html.ActionLink("Create", "Create", new { @class = "btn btn-success" })
