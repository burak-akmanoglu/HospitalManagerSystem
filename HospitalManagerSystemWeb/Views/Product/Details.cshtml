@*
  Product/Details
*@
@model EntityLayer.Concrete.Product
<form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             @Html.HiddenFor(ba => ba.ProductId)
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Storehouse.StorehouseName" class="control-label"></label>
                <input asp-for="Storehouse.StorehouseName" class="form-control" />
                <span asp-validation-for="Storehouse.StorehouseName" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>