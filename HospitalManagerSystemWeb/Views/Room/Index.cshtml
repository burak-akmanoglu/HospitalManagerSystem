@*
   Room/Index
*@

@model IEnumerable<EntityLayer.Concrete.Room>

<table class="table table-striped" style="width:400px">

    <theead>
        <tr>
            <th>
                Oda
            </th>
            <th>
                Bina
            </th>

            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>

        </tr>
    </theead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.RoomName
                </td>
                <td>
                    @item.Building.BuildingName
                </td>


                <td>@Html.ActionLink("Delete", "Delete", new { id = item.RoomId }, new { @class = "btn btn-warning" })</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.RoomId }, new { @class = "btn btn-success" })</td>
            </tr>
        }
    </tbody>
</table>@Html.ActionLink("Create", "Create", new { @class = "btn btn-success" })